    int i;
    for(i=0;i<=6;i++)
    {
        LATGbits.LATG2^=1;
        __delay_ms(200);
//        LATGbits.LATG2=0;
//        __delay_ms(200);
        
    }
    IFS0bits.T2IF = 0;
    T1CONbits.TON = 1;
    T2CONbits.TON = 0;
}

