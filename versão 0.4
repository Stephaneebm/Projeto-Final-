void __attribute__((interrupt,no_auto_psv)) _T1Interrupt(void){
    q++; 
    LATGbits.LATG2=0;      
    IFS0bits.T1IF = 0;
    if(q==x)
    {
        T2CONbits.TON = 1;    
        T1CONbits.TON = 0;
        
        q=0;
    }
      
}
